<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0">
        <ImageButton
            android:id="@+id/backmotivationbutton"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_arrow_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.5"
            android:contentDescription="@string/back">

        </ImageButton>
        <ImageButton
            android:id="@+id/nextmotivationbutton"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.5"
            android:src="@drawable/ic_baseline_navigate_next_button"
            android:contentDescription="@string/next"></ImageButton>
    </LinearLayout>

        <TextView
            android:id="@+id/motivationi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/motivation_Insight"
            android:padding="5dp" />

</LinearLayout>