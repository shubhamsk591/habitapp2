<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="4dp"
        android:text="Today's Date" />

    <LinearLayout
        android:id="@+id/linearlisthome1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="12dp">

        <ListView

            android:id="@+id/listViewhome_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

        </ListView>
    </LinearLayout>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/welcome_text" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/modify_frag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/linearlisthome1"
        android:layout_alignBottom="@id/linearlisthome1"
        android:layout_gravity="bottom"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:baselineAlignBottom="true"
        android:contentDescription="@string/add_habit"
        android:src="@android:drawable/ic_menu_edit"
        app:backgroundTint="@color/teal_200"
        app:tint="@color/white" />
</RelativeLayout>
